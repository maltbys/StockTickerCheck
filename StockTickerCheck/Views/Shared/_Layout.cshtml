<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>@ViewBag.Title - Simple Financial Info</title>
  @Styles.Render("~/Content/css")
  @Scripts.Render("~/bundles/modernizr")

  <style>
    .footer {
      position: absolute;
      bottom: 0;
      width: 100%;
      height: 60px;
      line-height: 60px;
      background-color: #f5f5f5;
    }
    header {
      margin-bottom: 16px;
    }
    .navbar-brand {
      margin-left: 16px;
    }
    .navbar-nav > .active > a {
      color: white !important;
    }
  </style>
</head>
<body>
  <header>
    <!-- Fixed navbar -->
    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
      <a class="navbar-brand" href="#">Simple Financial Info</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarCollapse">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item @(ViewBag.Title == "Index" ? "active" : "")">
            <a class="nav-link" href="Index">Home</a>
          </li>
          <li class="nav-item @(ViewBag.Title == "About" ? "active" : "")">
            <a class="nav-link" href="About">About</a>
          </li>
          <li class="nav-item @(ViewBag.Title == "Contact" ? "active" : "")">
            <a class="nav-link" href="Contact">Contact</a>
          </li>
        </ul>
      </div>
    </nav>
  </header>
  <div class="container body-content">
    @RenderBody()
  </div>
  <footer class="footer text-center">
    <p class="ml-4">&copy; @DateTime.Now.Year - Simple Financial Info</p>
  </footer>

  @Scripts.Render("~/bundles/jquery")
  @Scripts.Render("~/bundles/bootstrap")
  @RenderSection("scripts", required: false)
</body>
</html>
